{
    "manifest_version": 3,
    "name": "Prompt Tag Auto Closer",
    "version": "1.0",
    "description": "ChatGPT 프롬프트 입력 시 XML 태그 자동 닫기",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://chat.openai.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}